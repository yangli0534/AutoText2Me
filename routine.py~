def timerFun():
    flag = 0
    global sched_Timer
    while True:
        now = datetime.datetime.now()
        if now == sched_Timer:
            run_Task()
            flag = 1
        else:
            if flag == 1:
                sched_Timer = sched_Timer + datetime.timedelta(minutes = 1)
                flag = 0

